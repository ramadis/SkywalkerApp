<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/cardResultLayout"
    android:layout_height="wrap_content"
    android:paddingTop="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/cardResultElement"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/airline_name"
                android:id="@+id/from_to_shorts"
                android:textStyle="normal|bold"
                android:textSize="30sp"
                android:layout_below="@+id/airline_name"
                android:layout_alignEnd="@+id/result_time_arr" />

            <TextView
                android:text="LATAM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginTop="15dp"
                android:id="@+id/airline_name"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="18:00 todos los jueves"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/flightCode"
                android:textAlignment="viewEnd"
                android:layout_above="@+id/from_to_shorts"
                android:layout_toEndOf="@+id/airline_name"
                android:layout_marginStart="15dp" />

            <TextView
                android:text="Horario de salida: 17:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/result_term_arr"
                android:layout_below="@+id/result_time_arr"
                android:layout_alignEnd="@+id/result_time_arr"
                android:visibility="visible"
                android:textAlignment="textEnd" />

            <TextView
                android:text="Horario de salida: 17:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/result_gate_arr"
                android:layout_below="@+id/result_term_arr"
                android:layout_alignStart="@+id/result_term_arr"
                android:textAlignment="viewEnd"
                android:visibility="visible" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:id="@+id/small_time"
                android:layout_above="@+id/from_to_shorts"
                android:layout_alignParentEnd="true"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:visibility="invisible" />

            <Button
                android:text="@string/subscribe_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/subscribe_button"
                style="@style/Widget.AppCompat.Button.Colored"
                android:backgroundTint="@drawable/selector_row"
                android:layout_below="@+id/result_term_dep"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Horario de salida: 17:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/result_term_dep"
                android:visibility="visible"
                android:layout_below="@+id/result_gate_dep"
                android:layout_alignStart="@+id/from_to_shorts" />

            <TextView
                android:text="Horario de salida: 17:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/result_time_dep"
                android:layout_marginRight="15dp"
                android:visibility="visible"
                android:layout_below="@+id/from_to_shorts"
                android:layout_alignStart="@+id/airline_name" />

            <TextView
                android:text="Horario de llegada: 17:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/result_time_arr"
                android:textAlignment="viewEnd"
                android:visibility="visible"
                android:layout_alignBaseline="@+id/result_time_dep"
                android:layout_alignBottom="@+id/result_time_dep"
                android:layout_alignEnd="@+id/small_time" />

            <TextView
                android:text="Horario de salida: 17:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/result_gate_dep"
                android:visibility="visible"
                android:layout_below="@+id/result_time_dep"
                android:layout_alignStart="@+id/result_time_dep" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>