<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.g3.skywalker.SettingsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="@string/settings_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:id="@+id/titleSettingsFragm"
            android:textAlignment="center"
            android:textStyle="normal|bold" />

        <TextView
            android:text="5 Minutos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seekBarPollValue"
            android:layout_marginRight="10dp"
            android:layout_marginTop="31dp"
            android:layout_below="@+id/titleSettingsFragm"
            android:layout_alignParentEnd="true" />

        <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="14"
            android:progress="4"
            android:layout_marginTop="21dp"
            android:id="@+id/seekBarPoll"
            android:soundEffectsEnabled="false"
            android:layout_alignTop="@+id/seekBarPollValue"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</FrameLayout>
