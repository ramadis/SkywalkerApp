<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.g3.skywalker.SearchFragment">


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:text="@string/search_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="?attr/actionMenuTextColor"
            android:textStyle="normal|bold"
            android:layout_marginTop="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="0px"
                android:layout_height="0px"/>

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:id="@+id/autoCompleteTextView"
                android:imeOptions="flagNoExtractUi"
                android:nextFocusUp="@+id/autoCompleteTextView"
                android:nextFocusLeft="@+id/autoCompleteTextView"
                android:completionHint="@string/search_placeholder"
                android:hint="@string/search_placeholder"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:textAlignment="viewStart"
                android:capitalize="sentences"
                tools:ignore="UnknownId"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_below="@+id/textView3"
                android:layout_alignParentStart="true" />

        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/dealViewRV"
            android:layout_below="@+id/button2"
            android:layout_alignParentStart="true" />

        <Button
            android:text="@string/search_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_weight="1"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_below="@+id/input_layout_password"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="Ejemplo: Londres o LA2889"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_below="@+id/input_layout_password"
            android:layout_alignParentStart="true"
            android:textColor="?android:attr/textColorHint"
            android:paddingLeft="5dp"
            android:textSize="12sp" />

    </RelativeLayout>

</FrameLayout>
